doctype html
html(lang="en" ng-app="metricapp" ng-strict-di)

    head
        base(href="/")
        //- META: BASICS
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible"       content="IE=edge")
        meta(name="viewport"                    content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        meta(http-equiv="content-script-type" 	content="text/javascript")
        meta(http-equiv="content-style-type" 	content="text/css")
        meta(http-equiv="content-language" 	    content="en")
        meta(http-equiv="date" 				    content="Wed, 28 Jan 2015 8:00:00 GMT")
        meta(http-equiv="last-modified" 		content="Fri, 30 Jan 2015 20:00:00 GMT")
        meta(http-equiv="window_target" 		content="_top")

        //- META: SEO
        meta(name="application-name" content="metricapp")
        meta(name="author" 		     content="Giacomo Marciani")
        meta(name="description"      content="Metricapp")
        meta(name="copyright" 		 content="MIT License, Copyright (c) 2016")
        meta(name="keywords" 		 content="software engineering")
        meta(name="google" 		     content="notranslate")
        meta(name="robots" 		     content="index, follow")
        meta(name="revisit-after" 	 content="14 days")
        meta(name="viewport" 		 content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")

        //- META: VARIABLES
        - var styles = "dist/styles"
        - var scripts = "dist/scripts"
        - var images = "dist/images"
        - var vendors = "vendors"
        - var favicon_sizes = [16, 24, 32, 48, 64]

        //- TITLE
        title Metricapp

        //- FAVICON
        link(rel="icon" type="image/x-icon" sizes="any" href=images+"/logo.svg")
        each size in favicon_sizes
            link(rel="icon" type="image/x-icon" sizes=size+"x"+size href=images+"/icons/favicon-"+size+".png")

        link(rel="shortcut icon" type="image/x-icon" sizes="any" href=images+"/logo.svg")
        each size in favicon_sizes
            link(rel="shortcut icon" type="image/x-icon" sizes=size+"x"+size href=images+"/icons/favicon-"+size+".png")

        //- STYLES
        link(rel="stylesheet" type="text/css" href=vendors+"/bootstrap/dist/css/bootstrap.min.css" )

        //if lt IE 8
            script(type="text/javascript" src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
            script(type="text/javascript" src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")

        link(rel="stylesheet" type="text/css" media="screen, projection" href=styles+"/app.min.css")

    body

        //- NAVIGATION
        ma-navbar(role="navigation")

        //- FLASH MESSAGES
        div(m-flash role="alert")

        //- CONTENT
        div(ng-view class="container-fluid" role="main")

        //- VENDOR SCRIPTS
        script(type="text/javascript" src=vendors+"/jquery/dist/jquery.min.js")
        script(type="text/javascript" src=vendors+"/bootstrap/dist/js/bootstrap.min.js")
        script(type="text/javascript" src=vendors+"/angular/angular.min.js")
        script(type="text/javascript" src=vendors+"/angular-route/angular-route.min.js")
        script(type="text/javascript" src=vendors+"/angular-cookies/angular-cookies.min.js")
        script(type="text/javascript" src=vendors+"/angular-messages/angular-messages.min.js")
        script(type="text/javascript" src=vendors+"/angular-mocks/angular-mocks.js")

        //- APP SCRIPTS
        script(type="text/javascript" src=scripts+"/app.js")
