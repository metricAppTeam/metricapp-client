head
    //- META: BASICS
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible"       content="IE=edge")
    meta(name="viewport"                    content="width=device-width, initial-scale=1")
    meta(http-equiv="content-script-type" 	content="text/javascript")
    meta(http-equiv="content-style-type" 	content="text/css")
    meta(http-equiv="content-language" 	    content="en")
    meta(http-equiv="date" 				    content="Wed, 28 Jan 2015 8:00:00 GMT")
    meta(http-equiv="last-modified" 		content="Fri, 30 Jan 2015 20:00:00 GMT")
    meta(http-equiv="window_target" 		content="_top")

    //- META: SEO
    meta(name="application-name" content="metricapp")
    meta(name="author" 		     content="Giacomo Marciani")
    meta(name="description"      content="Metricapp")
    meta(name="copyright" 		 content="MIT License, Copyright (c) 2016")
    meta(name="keywords" 		 content="software engineering")
    meta(name="google" 		     content="notranslate")
    meta(name="robots" 		     content="index, follow")
    meta(name="revisit-after" 	 content="14 days")
    meta(name="viewport" 		 content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")

    //- META: VARIABLES
    - var styles = "../styles"
    - var scripts = "../scripts"
    - var images = "../images"
    - var bower = "../../bower_components"
    - var favicon_sizes = [16, 24, 32, 48, 64]

    //- TITLE
    title Metricapp

    //- FAVICON
    link(rel="icon" type="image/x-icon" sizes="any" href=images+"/logo.svg")
    each size in favicon_sizes
        link(rel="icon" type="image/x-icon" sizes=size+"x"+size href=images+"/icons/favicon-"+size+".png")

    link(rel="shortcut icon" type="image/x-icon" sizes="any" href=images+"/logo.svg")
    each size in favicon_sizes
        link(rel="shortcut icon" type="image/x-icon" sizes=size+"x"+size href=images+"/icons/favicon-"+size+".png")

    //- STYLES
    link(rel="stylesheet" type="text/css" href=bower+"/bootstrap/dist/css/bootstrap.min.css" )

    //- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    //- WARNING: Respond.js doesn't work if you view the page via file:
    <!--[if lt IE 9]>
    script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
    script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    <![endif]-->

    link(rel="stylesheet" type="text/css" media="screen, projection" href=styles+"/main.min.css")

    //- SCRIPTS
    script(type="text/javascript" src=scripts+"/main.min.js")
